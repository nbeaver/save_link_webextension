{
  "name": "Save a link to the current tab",
  "description": "Save an HTML file that links to the current tab.",
  "manifest_version": 2,
  "version": "0.1.2",
  "icons": {
    "48": "icons/icon.svg",
    "96": "icons/icon.svg"
  },
  "permissions": [
    "activeTab",
    "downloads"
  ],
  "browser_action": {
    "default_icon": "icons/icon.svg",
    "default_title": "Save a link"
  },
  "background": {
    "scripts": ["generate_link.js"]
  }
}
